<%= form_with(model: assessment_item, local: true) do |form| %>
  <% if assessment_item.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h5 class="alert-heading"><%= I18n.t("errors.messages.not_saved",
                                           count: assessment_item.errors.count,
                                           resource: assessment_item.class.model_name.human.downcase)
      %></h5>
      <hr>
      <% assessment_item.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :course_id %>
    <%= form.select :course_id, @courses, {include_blank: true}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight %>
    <%= form.number_field :weight, class: "form-control", step: 0.1 %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
